{
  "openapi": "3.0.0",
  "info": {
    "title": "Multi-Downloader API",
    "version": "1.0.0",
    "description": "API para download de m√≠dias do Instagram, TikTok e Twitter"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development"
    }
  ],
  "paths": {
    "/api/ig": {
      "get": {
        "summary": "Download Instagram media",
        "parameters": [
          {
            "in": "query",
            "name": "url",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Instagram post URL"
          }
        ],
        "responses": {
          "200": {
            "description": "Media download info",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DownloadResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid URL",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DownloadResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string"
                },
                "thumbnail": {
                  "type": "string"
                },
                "quality": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": ["video", "audio", "image"]
                }
              }
            }
          },
          "criador": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "error": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string"
              },
              "code": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  }
}